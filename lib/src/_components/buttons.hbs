<p>
    <button bs-button="subtle icon-left">{{ inc src="icon.hbs" icon="square-add" }} Icon Left</button>
    <button bs-button="subtle icon-right">{{ inc src="icon.hbs" icon="bug" }} Icon Right</button>
    <button bs-button="subtle icon">{{ inc src="icon.hbs" icon="target" }}</button>
    <button bs-button="subtle icon" disabled>{{ inc src="icon.hbs" icon="help" }}</button>
</p>
<p>
    <button bs-button="size-small subtle icon-left">{{ inc src="icon.hbs" icon="square-add" }} Icon Left</button>
    <button bs-button="size-small subtle icon-right">{{ inc src="icon.hbs" icon="bug" }} Icon Right</button>
    <button bs-button="size-small subtle icon">{{ inc src="icon.hbs" icon="target" }}</button>
    <button bs-button="size-small subtle icon" disabled>{{ inc src="icon.hbs" icon="help" }}</button>
