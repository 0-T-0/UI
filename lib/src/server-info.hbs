---
layout: parent.hbs
---
<main>
    {{ inc src="../img/icons/svg/symbols.svg" }}
    {{ inc src="header.hbs" }}
    {{ inc src="nav.hbs" }}

    <section bs-content="">
        <div ng-view="">
            <div>
                <article>
                    <h1 bs-button="nav heading"><i bs-icon="cog"></i> Server Info</h1>
                    <div>
                        <h2>Access Information:</h2>
                        <section bs-callout="">
                            <div bs-callout-content="" bs-flex="">
                                <div>
                                    <div bs-callout-icon="">
                                        <i bs-icon="computer_download"></i>
                                    </div>
                                </div>
                                <div bs-flex-item="text" bs-width="50">
                                    <p bs-text="lede" class="ng-binding">Local</p>

                                    <p class="ng-binding">URL for the machine you are running BrowserSync on</p>
                                </div>
                                <div bs-flex-item="action" bs-width="50">
                                    <div bs-input-overlay="">
                                        <input type="text" value="http://localhost:3000">

                                        <div bs-button-bar="">
                                            <button bs-button="inverted icon" title="Sync all devices here"><i bs-icon="repeat_2"></i></button>
                                            <a href="http://localhost:3000" target="_blank" bs-button="inverted icon" title="Launch new tab here"><i bs-icon="share"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section bs-callout="">
                            <div bs-callout-content="" bs-flex="">
                                <div>
                                    <div bs-callout-icon="">
                                        <i bs-icon="wifi_3"></i>
                                    </div>
                                </div>
                                <div bs-flex-item="text" bs-width="50">
                                    <p bs-text="lede" class="ng-binding">External</p>

                                    <p class="ng-binding">Other devices on the same wifi network</p>
                                </div>
                                <div bs-flex-item="action" bs-width="50">
                                    <div bs-input-overlay="">
                                        <input type="text" value="http://192.168.0.2:3000">

                                        <div bs-button-bar="">
                                            <button bs-button="inverted icon" title="Sync all devices here"><i bs-icon="repeat_2"></i></button>
                                            <a href="http://192.168.0.2:3000" target="_blank" bs-button="inverted icon" title="Launch new tab here"><i bs-icon="share"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div bs-callout="">
                                <div bs-callout-icon="">
                                    <i bs-icon="terminal"></i>
                                </div>
                                <div bs-callout-content="">
                                    <p bs-text="lede">Serving files from</p>
                                    <ul bs-list="">
                                        <li>/Users/shakyshane/Sites/browser-sync-modules/browser-sync-cp/test/fixtures</li>
                                    </ul>
                                </div>
                            </div>
                        </section>
                    </div>
                </article>
            </div>
        </div>
    </section>
</main>